<% provide :title, t("word_show_title") %>
<div id="wrapper" >
  <%= render "layouts/menu.html.erb" %>
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="w3-container">
            <div class="row">
              <div class="col-lg-12">
                <h1 class="page-header"><%= t "word_show_all" %></h1>
              </div>
            </div>
            <div class="row w3-ul w3-card-4">
              <div class="col-lg-12">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <%= t "word_show_all" %>
                    <div class="search-form">
                      <%= render "search" %>
                    </div>
                  </div>
                  <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover"
                      id="dataTables-example">
                      <thead>
                        <tr>
                          <th><%= t "word_table_word" %></th>
                          <th><%= t "word_table_content" %></th>
                          <th><%= t "word_table_category" %></th>
                          <th><%= t "word_table_time" %></th>
                          <th><%= t "word_table_learned" %></th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if @words.any? %>
                          <% @words.each do |word| %>
                            <tr class="odd gradeX">
                              <td><%= link_to word.name, word_path(word) %></td>
                              <td><%= word.content.truncate_words(
                                Settings.limit_content) %></td>
                              <td class="center"><%= word.category.name %></td>
                              <td><%= t "word_table_posted" %>
                                <%= time_ago_in_words(word.created_at) %>
                                <%= t "word_table_posted_end" %></td>
                              <td class="center">X</td>
                            </tr>
                          <% end %>
                        <% else %>
                          <h1><%= t "word_search_not" %></h1>
                        <% end %>
                      </tbody>
                    </table>
                    <%= will_paginate @word %>
                    <div class="well">
                      <h4><%= t "word_framgia" %></h4>
                      <p><%= t "word_framgia_list" %><a target="_blank"
                        href="http://recruit.framgia.vn/"><%= t "word_framgia_url" %>
                        </a>.
                      </p>
                      <a class="btn btn-default btn-lg btn-block"
                        target="_blank" href="http://framgia.com/jp/">
                        <%= t "word_framgia_home" %></a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
