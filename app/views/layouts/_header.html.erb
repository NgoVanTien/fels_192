<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:sample_app), "#", id: "logo" %>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse"
           data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#"><%= t "e_learning" %></a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <% if logged_as_admin? %>
                <li>
                  <%= link_to t(:header_categories), admin_categories_path %>
                </li>
              <% else %>
                <li>
                  <%= link_to t(:header_categories), categories_path %>
                </li>
              <% end %>
              <li><%= link_to @current_user.name, user_path(current_user) %></li>
              <li><%= link_to t(:header_home), root_path %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= t "header_account" %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to t(:header_profile), current_user %></li>
                  <li><%= link_to t(:header_settings), edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to t(:header_logout), logout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to t(:home), root_path %></li>
              <li><%= link_to t(:header_log_in), login_path %></li>
              <li><%= link_to t(:header_sign_up), new_user_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</header>
