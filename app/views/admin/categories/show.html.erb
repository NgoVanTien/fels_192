<div class="container show_img">
  <h1 class="text-center"><%= t "category_information" %></h1>
  <div class="row category-info">
    <div class="col-md-4">
      <%= image_tag @category.category_img.url(:category_show),
        class: "category_img_show"%>
    </div>
    <div class="col-md-8">
      <div class="category_info">
        <h2><%= @category.name %></h2>
        <p><%= @category.description %></p>
        <%= link_to t("edit"), edit_admin_category_path(@category),
          class: "btn-flip btn btn-3d btn-primary" %>
        <%= link_to t("delete"), admin_category_path(@category), method: :delete,
          data: {confirm: t("delete_message")}, class: "btn-flip btn btn-3d btn-danger" %>
        <%= link_to t("back"), admin_categories_path,
          class: "btn-flip btn btn-3d btn-warning" %>
      </div>
    </div>
  </div>
  <div class="responsive-table category_info">
    <h2><%= t "word_list" %></h2>
    <table class="table table-striped table-bordered" width="100%" cellspacing="0">
    <thead>
      <tr>
        <th class="header-table"><%= t "word" %></th>
        <th class="header-table"><%= t "word_definition" %></th>
      </tr>
    </thead>
    <tbody>
      <% @words.each do |word| %>
        <tr>
          <td><%= word.name %></td>
          <td><%= word.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
