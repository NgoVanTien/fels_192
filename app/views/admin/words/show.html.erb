<% provide :title, t("word_show_title") %>
<div id="wrapper" >
  <%= render "layouts/admin/menu.html.erb" %>
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <h1><%= t "word_show_info" %></h1>
          <div class="w3-container">
            <div class="row category-info">
              <div class="col-md-4 title-word">
                <div class="top-word">
                  <h4><%= @word.name %></h4>
                </div>
                <div class="bot-content">
                  <p><%= @word.content %></p>
                </div>
              </div>
              <div class="col-md-8">
                <div class="row w3-ul w3-card-4">
                  <div class="col-lg-12">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <%= t "answer_show_all" %>
                      </div>
                      <div class="panel-body">
                        <table width="100%"
                          class="table table-striped table-bordered table-hover"
                          id="dataTables-example">
                          <thead>
                            <tr>
                              <th><%= t "answer_table_answer" %></th>
                              <th><%= t "answer_table_answertf" %></th>
                            </tr>
                          </thead>
                          <tbody>
                            <% @answers.each do |answer| %>
                              <tr class="odd gradeX">
                                <td><%= link_to answer.answer_content , "" %></td>
                                <td class="td-center">
                                <% if answer.is_correct? %>
                                  <%= image_tag "true.png", class: "img-tf" %>
                                <% else %>
                                  <%= image_tag "false.png", class: "img-tf" %>
                                <% end %>
                                </td>
                              </tr>
                            <% end %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
